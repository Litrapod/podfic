      <filename>controller.php</filename>
      <filename>index.html</filename>
      <filename>contentstats.php</filename>
      <filename>access.xml</filename>
    </files>
	
	<languages folder="admin">
		<language tag="en-GB">en-GB.com_contentstats.ini</language>
		<language tag="en-GB">en-GB.com_contentstats.sys.ini</language>
	  </languages>
		
