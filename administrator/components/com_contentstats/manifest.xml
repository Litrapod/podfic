    <!-- Administration Menu Section -->
    <menu img="components/com_contentstats/assets/images/columns.png" link="option=com_contentstats">CONTENT_STATISTICS</menu>
	
    <files folder="admin">
      <folder>assets</folder>
      <folder>controllers</folder>
      
